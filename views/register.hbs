
  {{> header}}

  {{message}}

  <!-- Register -->
  <div class="register">
    <div class="container">
      <div class="row">
        <div class="col-md-8 m-auto">
          <h1 class="display-4 text-center">Sign Up</h1>
          <p class="lead text-center">Create your Houston Exponential account</p>
          <form action="/users/register" method='POST'>
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" placeholder="First Name" name="firstName" required />
            </div>
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" placeholder="Last Name" name="lastName" required />
            </div>
            <div class="form-group">
              <input type="email" class="form-control form-control-lg" placeholder="Email Address" name="email" />
            </div>
            <div class="form-group">
              <input type="password" class="form-control form-control-lg" placeholder="Password" name="password" />
            </div>
            <div class="form-group">
              <input type="password" class="form-control form-control-lg" placeholder="Confirm Password" name="password2" />
            </div>
            <input type="submit" class="btn btn-info btn-block mt-4" />
          </form>

          <a href="/users/linkedin">
            <img src="/logos/Sign-in-Large---Default.png" alt="linkedin">
            </img>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer}}
